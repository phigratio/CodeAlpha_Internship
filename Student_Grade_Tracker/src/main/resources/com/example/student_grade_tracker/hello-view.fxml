<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.student_grade_tracker.HelloController" stylesheets="@styles.css">
  <AnchorPane>
    <Label text="Student Grade Tracker" styleClass="heading" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
    <TextField fx:id="gradeInput" promptText="Enter grade" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
    <Button fx:id="addButton" text="Add Grade" onAction="#addGrade" AnchorPane.topAnchor="130.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
    <Button fx:id="resetButton" text="Reset" onAction="#reset" AnchorPane.topAnchor="180.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
    <Label fx:id="averageLabel" text="Average: " AnchorPane.topAnchor="230.0" AnchorPane.leftAnchor="20.0"/>
    <Label fx:id="highestLabel" text="Highest: " AnchorPane.topAnchor="270.0" AnchorPane.leftAnchor="20.0"/>
    <Label fx:id="lowestLabel" text="Lowest: " AnchorPane.topAnchor="310.0" AnchorPane.leftAnchor="20.0"/>
    <Label fx:id="gradeLabel" text="Grade: " AnchorPane.topAnchor="350.0" AnchorPane.leftAnchor="20.0"/>
  </AnchorPane>
</StackPane>
